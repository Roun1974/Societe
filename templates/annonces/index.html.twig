{% extends 'base.html.twig' %}

{% block title %}Annonces index{% endblock %}

{% block body %}
<div class="container">

    <h6>Listes des Annonces</h6>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for annonce in annonces %}
            <tr>
                <td>{{ annonce.id }}</td>
                <td>{{ annonce.title }}</td>
                <td>{{ annonce.content }}</td>
                <td>
                    <a href="{{ path('app_annonces_show', {'id': annonce.id}) }}" class="btn btn-theme btn-rounded">show</a><br/><br/>
                    <a href="{{ path('app_annonces_edit', {'id': annonce.id}) }}" class="btn btn-theme btn-rounded">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_annonces_new') }}" class="btn btn-theme btn-rounded" >Create new</a><br/><br/>
    </div>
{% endblock %}
